<p id="notice"><%= notice %></p>

<h1>Contrata</h1>

<table>
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Linea</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contrata.each do |contratum| %>
      <tr>
        <td><%= contratum.cliente %></td>
        <td><%= contratum.linea %></td>
        <td><%= link_to 'Show', contratum %></td>
        <td><%= link_to 'Edit', edit_contratum_path(contratum) %></td>
        <td><%= link_to 'Destroy', contratum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

